<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:ATLab.Controls"
             xmlns:vm="clr-namespace:ATLab.ViewModels.Tabs"
             x:Class="ATLab.Views.LabTab"
             x:DataType="vm:LabTabViewModel">

    <Design.DataContext>
        <vm:LabTabViewModel />
    </Design.DataContext>

    <StackPanel>
        
        <controls:MeasSelector
            DataContext="{Binding MeasChannelViewModel}"
            HorizontalAlignment="Left"/>
        
        <controls:StimSelector 
            DataContext="{Binding StimChannelViewModel}"
            HorizontalAlignment="Left"
            GridRows="8"
            GridColumns="2"/>
        
        <controls:ExtStimSelector 
            DataContext="{Binding ExtStimChannelViewModel}"
            HorizontalAlignment="Left"
            GridRows="1"
            GridColumns="4"/>
        
        <Button 
            Content="Set Relay State"
            Command="{Binding UpdateTestHardwareRelayStatesCommand}"/>
            
    </StackPanel>
</UserControl>