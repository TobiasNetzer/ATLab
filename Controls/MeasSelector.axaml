<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATLab.Controls.MeasSelector"
             xmlns:vm="clr-namespace:ATLab.ViewModels"
             x:DataType="vm:MeasChannelViewModel"
             Width="500">
    
    <Design.DataContext>
        <vm:MeasChannelViewModel />
    </Design.DataContext>
    
    <Border Background="{DynamicResource SystemChromeLowColor}"
            CornerRadius="15"
            Margin="10">
        
        <StackPanel>
            
            <Border Background="{DynamicResource SystemBaseLowColor}"
                    CornerRadius="15"
                    Padding="10"
                    Margin="0">
                <DockPanel>
                    <TextBlock Text="Matrix Channels"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>

                    <ToggleButton IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                  DockPanel.Dock="Right"
                                  HorizontalAlignment="Right">
                        <ToggleButton.Template>
                            <ControlTemplate>
                                <Grid>
                                    <TextBlock Text="&#xE70D;" 
                                               FontFamily="avares://ATLab/Assets/Segoe Fluent Icons.ttf#Segoe Fluent Icons"
                                               FontSize="24"
                                               IsVisible="{Binding IsExpanded, Converter={StaticResource InverseBoolConverter}}"/>
                                    <TextBlock Text="&#xE70E;" 
                                               FontFamily="avares://ATLab/Assets/Segoe Fluent Icons.ttf#Segoe Fluent Icons"
                                               FontSize="24"
                                               IsVisible="{Binding IsExpanded}"/>
                                </Grid>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </DockPanel>
            </Border>
                
                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="80"
                            IsVisible="{Binding IsExpanded}"
                            Margin="10">
                    <StackPanel>
                        <TextBlock Text="Matrix H:"
                                   FontSize="16"/>
                        
                        <ComboBox ItemsSource="{Binding MeasChannels}"
                                  SelectedIndex="{Binding IsSelectedH, Mode=TwoWay}"
                                  PlaceholderText="Select a channel..."
                                  Width="120"
                                  MaxWidth="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="ChannelIndex"/>
                                                <Binding Path="ChannelName"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="Matrix L:"
                                   FontSize="16"/>
                    
                        <ComboBox ItemsSource="{Binding MeasChannels}"
                                  SelectedIndex="{Binding IsSelectedL, Mode=TwoWay}"
                                  Width="120"
                                  MaxWidth="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="ChannelIndex"/>
                                                <Binding Path="ChannelName"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
